\makeatletter
\def\@makeschapterhead#1{%
   {\parindent \z@ \raggedright
      \normalfont
      \interlinepenalty\@M
      \centering \Large \bfseries  #1\par\nobreak
      \vskip 5\p@ \thispagestyle{empty}
   }}
\makeatother

